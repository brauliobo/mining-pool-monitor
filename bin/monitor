#!/usr/bin/env ruby

require_relative '../monitor'

coin  = (ARGV[0].presence || 'eth').camelize.to_sym
pool  = ARGV[1].presence
klass = Coin.const_get coin
inst  = klass.new

if ARGV[0]
  if pool
    inst.pool_process pool
  else
    inst.process
  end
  exit
end

loop do
  inst.process
  sleep 60.minutes
end

