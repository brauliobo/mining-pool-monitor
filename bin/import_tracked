#!/usr/bin/env ruby

require_relative '../monitor'

Eth::POOLS.each do |pool, opts|
  wallets = ENV["WALLETS_#{pool}"].squish.split
  wallets.map! do |wallet|
    {
      coin:   'eth',
      pool:   pool.to_s,
      wallet: wallet,
    }
  end

  DB[:wallets_tracked].insert_conflict.multi_insert wallets
end

